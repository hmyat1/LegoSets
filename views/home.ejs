<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lego Collection - Home</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/navbar', { page: '/' }) %>

  <li><a class="<%= (page == '/lego/addSet') ? 'active' : '' %>" href="/lego/addSet">Add Set</a></li>


  <!-- Page Content -->
  <div class="container mx-auto">
    <!-- Hero Section -->
    <div class="hero bg-gray-100">
      <h1 class="text-4xl font-bold text-center my-8">Explore Our Lego Collection</h1>
      <!-- Removed Explore Sets button as it was not mentioned in the requirements -->
    </div>

    <!-- Lego Set Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 mt-8">
      <!-- Loop through sets data and generate Lego Set Cards dynamically -->
      <% sets.forEach(set => { %>
        <div class="bg-white shadow-md rounded-md overflow-hidden">
          <img src="<%= set.img_url %>" alt="<%= set.name %>" class="w-full h-48 object-cover">
          <div class="p-4">
            <h2 class="text-lg font-semibold"><%= set.name %></h2>
            <!-- Add description about the LEGO set dynamically -->
            <p class="text-sm text-gray-600">Description about the LEGO set goes here.</p>
            <!-- Updated View Set button to link to the correct set details page -->
            <a href="/lego/sets/<%= set.set_num %>" class="btn mt-4 block w-full text-center py-2 px-4 rounded bg-blue-500 text-white hover:bg-blue-600">View Set</a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>
